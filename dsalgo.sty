% -------------------------------
% Color Palette
% -------------------------------
\RequirePackage[dvipsnames]{xcolor}
\definecolor{softblue}{RGB}{222, 235, 247}
\definecolor{softblueframe}{RGB}{158, 188, 218}

\definecolor{softgreen}{RGB}{226, 240, 217}
\definecolor{softgreenframe}{RGB}{168, 214, 167}

\definecolor{softorange}{RGB}{250, 235, 215}
\definecolor{softorangeframe}{RGB}{232, 190, 123}

% -------------------------------
% Boxes
% -------------------------------
\RequirePackage{tcolorbox}
\tcbuselibrary{breakable,skins}

\newtcolorbox{definition}[1][]{
  colback=softblue,
  colframe=softblueframe,
  title=\textbf{Definice},
  fonttitle=\bfseries,
  breakable,
  enhanced,
  arc=3mm,
  boxrule=0.5pt,
  #1
}

\newtcolorbox{theorem}[1][]{
  colback=softgreen,
  colframe=softgreenframe,
  title=\textbf{Věta},
  fonttitle=\bfseries,
  breakable,
  enhanced,
  arc=3mm,
  boxrule=0.5pt,
  #1
}

\newtcolorbox{exercise}[1][]{
  colback=softorange,
  colframe=softorangeframe,
  title=\textbf{Úkol},
  fonttitle=\bfseries,
  breakable,
  enhanced,
  arc=3mm,
  boxrule=0.5pt,
  #1
}

\newtcolorbox{example}[1][]{
  colback=softorange,
